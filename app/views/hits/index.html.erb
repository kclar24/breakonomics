<p id="notice"><%= notice %></p>

<h1>Hits</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image url</th>
      <th>Break date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hits.each do |hit| %>
      <tr>
        <td><%= hit.name %></td>
        <td><%= hit.image_url %></td>
        <td><%= hit.break_date %></td>
        <td><%= hit.description %></td>
        <td><%= link_to 'Show', hit %></td>
        <td><%= link_to 'Edit', edit_hit_path(hit) %></td>
        <td><%= link_to 'Destroy', hit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

